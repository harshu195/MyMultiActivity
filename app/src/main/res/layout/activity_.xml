<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityA">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity A"
        android:id="@+id/txtViewA"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnA2"
        android:layout_alignStart="@+id/btnA2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Text View"
        android:id="@+id/txtViewA2"
        android:layout_marginBottom="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Activity B"
        android:id="@+id/btnA"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/txtViewA"
        android:layout_alignLeft="@+id/txtViewA"
        android:layout_alignStart="@+id/txtViewA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Activity C"
        android:id="@+id/btnA2"
        android:layout_marginBottom="72dp"
        android:layout_above="@+id/txtViewA2"
        android:layout_alignLeft="@+id/txtViewA2"
        android:layout_alignStart="@+id/txtViewA2" />

</RelativeLayout>
